---
import Navbar from '../components/Navbar.astro';
import { Linkedin, Mail, Github, Globe, Smartphone, MapPin, Sparkles } from '@lucide/astro';
import { ClientRouter } from 'astro:transitions';

const siteTitle = "Cyprus Web Design | Professional Website Development in Cyprus";
const siteDescription = "Leading web designer in Cyprus. I create stunning, responsive websites for businesses across Limassol, Nicosia, Paphos, and Larnaca. Custom web development, SEO, and digital solutions.";
const siteUrl = "https://webdesign-cyprus.com";
const siteName = "Cyprus Web Design";
const siteKeywords = "web design cyprus, website design cyprus, web development cyprus, cyprus web designer, website developer cyprus, limassol web design, nicosia web design, paphos web design, larnaca web design, professional website cyprus, ecommerce website cyprus, responsive web design cyprus, SEO cyprus, digital agency cyprus";

const personalFacts = [
	{ icon: "globe", text: "Web designer & developer based in Cyprus" },
	{ icon: "smartphone", text: "Specialized in modern, responsive websites" },
	{ icon: "mappin", text: "Serving Limassol, Nicosia, Paphos & Larnaca" },
	{ icon: "sparkles", text: "Passionate about clean, user-focused design" }
];

const projects = [
	{ name: "solokit", bgColor: "#1a1a1a", textColor: "#fff" },
	{ name: "Rain Check", bgColor: "#1e3a2f", textColor: "#fff" },
	{ name: "Local Rush", bgColor: "#e5a33d", textColor: "#1a1a1a" }
];
---

