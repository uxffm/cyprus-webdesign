---
import Navbar from '../components/Navbar.astro';
import { Linkedin, Mail, Github } from '@lucide/astro';
import { ClientRouter } from 'astro:transitions';

const siteTitle = "Cyprus Web Design | Professional Website Development in Cyprus";
const siteDescription = "Leading web designer in Cyprus. I create stunning, responsive websites for businesses across Limassol, Nicosia, Paphos, and Larnaca. Custom web development, SEO, and digital solutions.";
const siteUrl = "https://webdesign-cyprus.com";
const siteName = "Cyprus Web Design";
const siteKeywords = "web design cyprus, website design cyprus, web development cyprus, cyprus web designer, website developer cyprus, limassol web design, nicosia web design, paphos web design, larnaca web design, professional website cyprus, ecommerce website cyprus, responsive web design cyprus, SEO cyprus, digital agency cyprus";

const personalFacts = [
	"Web designer & developer based in Cyprus",
	"Specialized in modern, responsive websites",
	"Serving businesses across Limassol, Nicosia & beyond",
	"Passionate about clean, user-focused design"
];

const projects = [
	{ name: "solokit", bgColor: "#1a1a1a", textColor: "#fff" },
	{ name: "Rain Check", bgColor: "#1e3a2f", textColor: "#fff" },
	{ name: "Local Rush", bgColor: "#e5a33d", textColor: "#1a1a1a" }
];
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<!-- Essential Meta Tags -->
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />

		<!-- Primary SEO Meta Tags -->
		<title>{siteTitle}</title>
		<meta name="title" content={siteTitle} />
		<meta name="description" content={siteDescription} />
		<meta name="keywords" content={siteKeywords} />
		<meta name="author" content={siteName} />
		<meta name="robots" content="index, follow" />
		<meta name="language" content="English" />
		<meta name="revisit-after" content="7 days" />

		<!-- Canonical URL -->
		<link rel="canonical" href={siteUrl} />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={siteUrl} />
		<meta property="og:title" content={siteTitle} />
		<meta property="og:description" content={siteDescription} />
		<meta property="og:image" content={`${siteUrl}/og-image.jpg`} />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta property="og:site_name" content={siteName} />
		<meta property="og:locale" content="en_CY" />

		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:url" content={siteUrl} />
		<meta name="twitter:title" content={siteTitle} />
		<meta name="twitter:description" content={siteDescription} />
		<meta name="twitter:image" content={`${siteUrl}/og-image.jpg`} />

		<!-- Geographic Meta Tags for Cyprus -->
		<meta name="geo.region" content="CY" />
		<meta name="geo.placename" content="Cyprus" />
		<meta name="geo.position" content="35.1264;33.4299" />
		<meta name="ICBM" content="35.1264, 33.4299" />

		<!-- Favicon -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />

		<!-- Generator -->
		<meta name="generator" content={Astro.generator} />

		<!-- View Transitions -->
		<ClientRouter />

		<!-- Structured Data / JSON-LD for Local Business -->
		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "ProfessionalService",
			"name": "Cyprus Web Design",
			"description": "Professional web designer and developer in Cyprus. I create stunning, responsive websites for businesses across Cyprus.",
			"url": "https://webdesign-cyprus.com",
			"logo": "https://webdesign-cyprus.com/logo.png",
			"image": "https://webdesign-cyprus.com/og-image.jpg",
			"telephone": "+357-00-000000",
			"email": "sayhi@lukaszadam.com",
			"address": {
				"@type": "PostalAddress",
				"addressLocality": "Limassol",
				"addressRegion": "Limassol",
				"addressCountry": "CY"
			},
			"geo": {
				"@type": "GeoCoordinates",
				"latitude": "34.6786",
				"longitude": "33.0413"
			},
			"areaServed": [
				{
					"@type": "City",
					"name": "Limassol"
				},
				{
					"@type": "City",
					"name": "Nicosia"
				},
				{
					"@type": "City",
					"name": "Paphos"
				},
				{
					"@type": "City",
					"name": "Larnaca"
				},
				{
					"@type": "Country",
					"name": "Cyprus"
				}
			],
			"serviceType": [
				"Web Design",
				"Web Development",
				"E-commerce Development",
				"SEO Services",
				"Digital Marketing",
				"UI/UX Design"
			],
			"priceRange": "$$",
			"openingHoursSpecification": {
				"@type": "OpeningHoursSpecification",
				"dayOfWeek": [
					"Monday",
					"Tuesday",
					"Wednesday",
					"Thursday",
					"Friday"
				],
				"opens": "09:00",
				"closes": "18:00"
			},
			"sameAs": [
				"https://www.facebook.com/cypruswebdesign",
				"https://www.instagram.com/cypruswebdesign",
				"https://www.linkedin.com/company/cypruswebdesign"
			]
		}
		</script>

		<!-- Website Schema -->
		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "WebSite",
			"name": "Cyprus Web Design",
			"url": "https://webdesign-cyprus.com",
			"potentialAction": {
				"@type": "SearchAction",
				"target": "https://webdesign-cyprus.com/search?q={search_term_string}",
				"query-input": "required name=search_term_string"
			}
		}
		</script>

		<!-- Organization Schema -->
		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "Organization",
			"name": "Cyprus Web Design",
			"url": "https://webdesign-cyprus.com",
			"logo": "https://webdesign-cyprus.com/logo.png",
			"contactPoint": {
				"@type": "ContactPoint",
				"telephone": "+357-00-000000",
				"contactType": "customer service",
				"areaServed": "CY",
				"availableLanguage": ["English", "Greek"]
			}
		}
		</script>
		<style>
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			html {
				scroll-behavior: smooth;
			}

			body {
				font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
				background: #e8e6e3;
				color: #1e293b;
				min-height: 100vh;
				position: relative;
				overflow-x: hidden;
			}

			.dappled-light {
				position: fixed;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				pointer-events: none;
				z-index: 0;
				overflow: hidden;
			}

			.dappled-light::before {
				content: '';
				position: absolute;
				top: -50%;
				right: -20%;
				width: 150%;
				height: 200%;
				background:
					repeating-linear-gradient(
						-55deg,
						transparent 0px,
						transparent 80px,
						rgba(255,255,255,0.7) 80px,
						rgba(255,255,255,0.7) 120px,
						transparent 120px,
						transparent 200px
					);
				filter: blur(40px);
				opacity: 0.6;
			}

			.dappled-light::after {
				content: '';
				position: absolute;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				background: linear-gradient(135deg, transparent 40%, rgba(255,255,255,0.3) 100%);
			}

			/* Main content */
			.main-content {
				position: relative;
				z-index: 1;
				padding: 80px 120px 80px 200px;
				max-width: 960px;
			}

			/* Hero section */
			.hero {
				margin-bottom: 80px;
			}

			.name {
				font-family: 'Georgia', serif;
				font-size: 4.5rem;
				font-weight: 700;
				line-height: 1.05;
				color: #2d3748;
				margin-bottom: 32px;
				letter-spacing: -0.02em;
			}

			.bio {
				font-size: 1.15rem;
				line-height: 1.7;
				color: #4a5568;
				margin-bottom: 28px;
				max-width: 600px;
			}

			.bio em {
				font-style: italic;
			}

			.read-more {
				color: #4299e1;
				text-decoration: none;
				font-weight: 500;
			}

			.read-more:hover {
				text-decoration: underline;
			}

			/* Facts list */
			.facts {
				list-style: none;
				margin-bottom: 20px;
			}

			.fact {
				font-size: 1rem;
				color: #718096;
				padding: 6px 0;
				line-height: 1.5;
			}

			/* More button */
			.more-btn {
				display: inline-flex;
				align-items: center;
				gap: 6px;
				padding: 8px 16px;
				background: rgba(255, 255, 255, 0.7);
				border: 1px solid rgba(0, 0, 0, 0.1);
				border-radius: 20px;
				font-size: 0.8rem;
				font-weight: 600;
				color: #4a5568;
				cursor: pointer;
				margin-bottom: 32px;
				transition: all 0.2s ease;
			}

			.more-btn:hover {
				background: rgba(255, 255, 255, 0.9);
				border-color: rgba(0, 0, 0, 0.15);
			}

			/* Social links */
			.social-links {
				display: flex;
				gap: 20px;
				margin-bottom: 20px;
			}

			.social-links a {
				color: #2d3748;
				transition: all 0.2s ease;
			}

			.social-links a:hover {
				color: #4299e1;
				transform: translateY(-2px);
			}

			/* Recent Work section */
			.recent-work {
				padding-top: 20px;
			}

			.section-title {
				font-family: 'Georgia', serif;
				font-size: 2.2rem;
				font-weight: 700;
				color: #2d3748;
				margin-bottom: 32px;
			}

			.projects-grid {
				display: grid;
				grid-template-columns: repeat(3, 1fr);
				gap: 20px;
			}

			.project-card {
				aspect-ratio: 1;
				border-radius: 16px;
				display: flex;
				align-items: center;
				justify-content: center;
				text-decoration: none;
				font-size: 1.4rem;
				font-weight: 600;
				transition: all 0.3s ease;
				box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
			}

			.project-card:hover {
				transform: translateY(-4px);
				box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
			}

			.project-name {
				text-align: center;
			}

			/* Dark mode styles */
			:root {
				--bg-color: #e8e6e3;
				--text-color: #2d3748;
				--text-secondary: #4a5568;
				--text-muted: #718096;
				--link-color: #4299e1;
				--card-bg: rgba(255, 255, 255, 0.7);
			}

			html.dark {
				--bg-color: #1a1a2e;
				--text-color: #e2e8f0;
				--text-secondary: #a0aec0;
				--text-muted: #718096;
				--link-color: #63b3ed;
				--card-bg: rgba(255, 255, 255, 0.1);
			}

			html.dark body {
				background: var(--bg-color);
				color: var(--text-color);
			}

			html.dark .dappled-light::before {
				background:
					repeating-linear-gradient(
						-55deg,
						transparent 0px,
						transparent 80px,
						rgba(255,255,255,0.1) 80px,
						rgba(255,255,255,0.1) 120px,
						transparent 120px,
						transparent 200px
					);
				opacity: 0.3;
			}

			html.dark .dappled-light::after {
				background: linear-gradient(135deg, transparent 40%, rgba(100, 100, 150, 0.1) 100%);
			}

			html.dark .name {
				color: var(--text-color);
			}

			html.dark .bio {
				color: var(--text-secondary);
			}

			html.dark .fact {
				color: var(--text-muted);
			}

			html.dark .more-btn {
				background: rgba(255, 255, 255, 0.1);
				border-color: rgba(255, 255, 255, 0.15);
				color: var(--text-secondary);
			}

			html.dark .more-btn:hover {
				background: rgba(255, 255, 255, 0.15);
			}

			html.dark .social-links a {
				color: var(--text-color);
			}

			html.dark .social-links a:hover {
				color: var(--link-color);
			}

			html.dark .section-title {
				color: var(--text-color);
			}

			html.dark .read-more {
				color: var(--link-color);
			}

			/* Services/SEO section */
			.services-info {
				padding-top: 60px;
				border-top: 1px solid rgba(0, 0, 0, 0.08);
				margin-top: 60px;
			}

			.services-content {
				max-width: 650px;
			}

			.services-content p {
				font-size: 1.05rem;
				line-height: 1.8;
				color: #4a5568;
				margin-bottom: 24px;
			}

			.services-content h3 {
				font-family: 'Georgia', serif;
				font-size: 1.4rem;
				font-weight: 600;
				color: #2d3748;
				margin-top: 32px;
				margin-bottom: 16px;
			}

			.services-list {
				list-style: none;
				margin-bottom: 24px;
			}

			.services-list li {
				font-size: 1rem;
				line-height: 1.7;
				color: #4a5568;
				padding: 8px 0;
				padding-left: 20px;
				position: relative;
			}

			.services-list li::before {
				content: '→';
				position: absolute;
				left: 0;
				color: #4299e1;
			}

			.cta-link {
				color: #4299e1;
				font-weight: 500;
				text-decoration: none;
			}

			.cta-link:hover {
				text-decoration: underline;
			}

			html.dark .services-info {
				border-top-color: rgba(255, 255, 255, 0.1);
			}

			html.dark .services-content p {
				color: var(--text-secondary);
			}

			html.dark .services-content h3 {
				color: var(--text-color);
			}

			html.dark .services-list li {
				color: var(--text-secondary);
			}

			html.dark .services-list li::before {
				color: var(--link-color);
			}

			html.dark .cta-link {
				color: var(--link-color);
			}

			/* Responsive */
			@media (max-width: 1024px) {
				.main-content {
					padding: 100px 60px 60px 60px;
				}

				.projects-grid {
					grid-template-columns: repeat(2, 1fr);
				}
			}

			@media (max-width: 768px) {
				.main-content {
					padding: 100px 24px 60px 24px;
				}

				.name {
					font-size: 3rem;
				}

				.bio {
					font-size: 1rem;
				}

				.projects-grid {
					grid-template-columns: 1fr;
				}

				.section-title {
					font-size: 1.8rem;
				}
			}
		</style>
	</head>
	<body>
		<div class="dappled-light"></div>
		<Navbar />

		<main class="main-content">
			<section class="hero" id="home">
				<h1 class="name">Cyprus<br/>Web Design</h1>

				<p class="bio">
					I create stunning, responsive websites for businesses across Cyprus.
					After years of helping companies establish their digital presence, I've
					mastered the art of turning ideas into beautiful, functional websites.
					I measure success by <em>client satisfaction</em>: from concept to launch,
					I deliver excellence. Based in Limassol. <a href="#about" class="read-more">Read more »</a>
				</p>

				<ul class="facts">
					{personalFacts.map(fact => (
						<li class="fact">{fact}</li>
					))}
				</ul>

				<button class="more-btn" id="more-facts-btn">
					MORE <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M6 9l6 6 6-6"/></svg>
				</button>

				<div class="social-links">
					<a href="https://linkedin.com" target="_blank" rel="noopener" aria-label="LinkedIn">
						<Linkedin size={22} />
					</a>
					<a href="https://x.com" target="_blank" rel="noopener" aria-label="X (Twitter)">
						<svg width="22" height="22" viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
					</a>
					<a href="mailto:sayhi@lukaszadam.com" aria-label="Email">
						<Mail size={22} />
					</a>
					<a href="https://github.com" target="_blank" rel="noopener" aria-label="GitHub">
						<Github size={22} />
					</a>
				</div>
			</section>

			<section class="recent-work" id="portfolio">
				<h2 class="section-title">Recent Work</h2>

				<div class="projects-grid">
					{projects.map(project => (
						<a href="#" class="project-card" style={`background-color: ${project.bgColor}; color: ${project.textColor}`}>
							<span class="project-name">{project.name}</span>
						</a>
					))}
				</div>
			</section>

			<section class="services-info" id="services">
				<h2 class="section-title">Web Design Services in Cyprus</h2>

				<div class="services-content">
					<p>
						As a leading <strong>web designer in Cyprus</strong>, I specialize in creating custom websites
						that help businesses thrive in the digital landscape. Whether you're a startup in Limassol,
						an established company in Nicosia, or a tourism business in Paphos, I deliver tailored solutions
						that meet your unique needs.
					</p>

					<h3>My Web Development Services</h3>
					<p>
						I offer comprehensive <strong>website development in Cyprus</strong> including responsive web design,
						e-commerce solutions, content management systems, and custom web applications. Every website I build
						is optimized for speed, security, and search engines to ensure maximum visibility for your business.
					</p>

					<h3>Why Choose Me?</h3>
					<ul class="services-list">
						<li><strong>Local Expertise:</strong> Deep understanding of the Cyprus market and business landscape</li>
						<li><strong>Modern Technologies:</strong> I use the latest frameworks and tools for optimal performance</li>
						<li><strong>SEO-Focused:</strong> Every website is built with search engine optimization in mind</li>
						<li><strong>Responsive Design:</strong> Your site will look perfect on desktops, tablets, and mobile devices</li>
						<li><strong>Ongoing Support:</strong> I provide maintenance and updates to keep your site running smoothly</li>
					</ul>

					<h3>Serving All of Cyprus</h3>
					<p>
						My <strong>web design services</strong> are available throughout Cyprus. I work with clients in
						<strong>Limassol</strong>, <strong>Nicosia</strong>, <strong>Paphos</strong>, <strong>Larnaca</strong>,
						and <strong>Famagusta</strong>. Whether you need a simple business website, a complex e-commerce platform,
						or a complete digital transformation, I'm here to help your business succeed online.
					</p>

					<p>
						Ready to start your project? <a href="mailto:sayhi@lukaszadam.com" class="cta-link">Contact me today</a>
						for a free consultation and let's discuss how I can bring your vision to life.
					</p>
				</div>
			</section>
		</main>
	</body>
</html>
