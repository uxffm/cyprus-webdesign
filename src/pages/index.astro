			// Scroll animation for projects
			function initProjectsAnimation() {
				const projectsContainer = document.querySelector('.projects-scroll-container');
				const projectsTrack = document.querySelector('.projects-track');
				if (!projectsContainer || !projectsTrack) return;

				// Reset state for view transitions
				projectsTrack.classList.remove('visible');

				const observer = new IntersectionObserver((entries) => {
					entries.forEach(entry => {
						if (entry.isIntersecting) {
							projectsTrack.classList.add('visible');
							observer.unobserve(entry.target);
						}
					});
				}, {
					threshold: 0,
					rootMargin: '0px 0px -100px 0px'
				});

				observer.observe(projectsContainer);
			}

			// Run on initial load
			initProjectsAnimation();

			// Re-run after view transitions
			document.addEventListener('astro:after-swap', initProjectsAnimation);
